# AbleTools Production Environment Variables
# Copy this file to .env.production and update with your actual values

# Application Environment
NODE_ENV=production

# Database Configuration
# Format: postgresql://username:password@host:port/database_name
# Example: postgresql://myuser_abletools:mypassword@localhost:5432/myuser_abletools_prod
DATABASE_URL=postgresql://your_db_user:your_db_password@localhost:5432/your_database_name

# Session Security
# Generate a random string at least 32 characters long
# You can use: openssl rand -base64 32
SESSION_SECRET=your_very_long_random_session_secret_here_minimum_32_characters

# Server Configuration
PORT=3000

# Optional: Email Configuration (for contact forms)
# SMTP_HOST=your_smtp_host
# SMTP_PORT=587
# SMTP_USER=your_email@domain.com
# SMTP_PASS=your_email_password

# Optional: Backup Configuration
# BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
# BACKUP_RETENTION_DAYS=30